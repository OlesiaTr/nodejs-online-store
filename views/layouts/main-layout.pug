  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{htmlTitle}
    link(rel="stylesheet", href="/css/main.css")
    link(rel="stylesheet", href="/css/header.css")
    block styles
  body
    header.header
      nav.nav
        ul.nav__list
          li.nav__item
            a.link(href="/", class=(path === "/" ? "active" : '')) Shop
          li.nav__item
            a.link(href="/admin/add-product", class=(path === "/admin/add-product" ? "active" : '')) Add Product
    block content
